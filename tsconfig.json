{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./src/models/*"],
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/api/controllers/*"],
      "@routers/*": ["./src/api/routers/*"],
      "@common/*": ["./src/common/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
