{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@config/*": ["./src/config/*"],
      "@useCases/*": ["./src/useCases/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@common/*": ["src/providers/common/*"],
      "@providers/*": ["./src/providers/*"],
      "@loaders/*": ["src/providers/loaders/*"]
    }
  },
  "include": ["src/**/*"]
}
