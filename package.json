{
  "name": "koa-api-template-ts",
  "version": "1.0.0",
  "description": "Typescript version of repo koa-api-template (js).",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/server.js",
    "prod": "npm run build && node dist/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "format": "prettier --write ./src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cacaudev/koa-api-template-ts.git"
  },
  "author": "cacaudev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cacaudev/koa-api-template-ts/issues"
  },
  "homepage": "https://github.com/cacaudev/koa-api-template-ts#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "btoa": "^1.2.1",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-context-validator": "^0.4.1",
    "koa-helmet": "^5.2.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^9.1.0",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "pm2": "^4.4.0",
    "rand-token": "^1.0.1",
    "sequelize": "^6.3.3",
    "uuidv4": "^6.2.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.4",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^4.0.0",
    "@types/koa-cors": "0.0.0",
