    "@types/node": "^14.0.26",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "@types/winston": "^2.4.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-watch": "^7.0.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "sequelize-cli": "^6.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
